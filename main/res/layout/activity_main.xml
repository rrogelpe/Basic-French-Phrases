            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:onClick="translate"
            android:singleLine="false"
            android:tag="0" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
